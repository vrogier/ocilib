INCS =  -I/usr/local/include
CFLAGS = -DOCI_IMPORT_LINKAGE -DOCI_CHARSET_ANSI
LDFLAGS= -L/home/vincent/dev/oracle/instantclient_19_9/ -lclntsh  -L/usr/local/lib -locilib
CC = gcc
SRCS = ocilib_demo.c
OBJS = $(SRCS:.c=.o)

all: ocilib_demo

ocilib_demo: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS)

.c.o:
	$(CC) $(INCS) $(CFLAGS) -c -o $@ $<

clean: 
	rm -f *~ $(OBJS)
